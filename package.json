{
  "name": "sos26-template",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.10",
  "engines": {
    "bun": ">=1.2.10"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "ci": "biome ci .",
    "clean": "turbo clean",
    "clean:all": "bun run clean && rm -rf node_modules apps/*/node_modules packages/*/node_modules .turbo"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "^1.3.5",
    "lefthook": "^2.0.13",
    "turbo": "^2.7.3",
    "typescript": "~5.9.3"
  }
}
