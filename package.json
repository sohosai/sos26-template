{
  "name": "sos26-template",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.10",
  "engines": {
    "bun": ">=1.2.10"
  },
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "typecheck": "tsc -b && bun run --filter '@sos26/*' typecheck"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "typescript": "~5.9.3"
  }
}
